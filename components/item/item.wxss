/* components/item/item.wxss */

.product-wrap {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30px;
  margin-bottom: 15px;
  padding: 0px 15px;
  padding-bottom: 50px;
}

.product-items {
  display: flex;
  width: calc(50% - 10px);
  margin: 0px 5px;
  box-shadow: 0px 1px 2px gray;
  flex-direction: column;
  margin-top: 10px;
  height: 300px;
}
.product-items-img{
  width: 100%;
  max-width: 100%;
}
.product-items-text{
  text-align: center;
}